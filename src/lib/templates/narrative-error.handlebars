<div class="narrative-message">
  <span class="info-pin-icon"></span>
  <span>{{message}}</span>
</div>
<div class="narrative-results">
    <div class="tab-container">
        {{#if (hasResultNumber 1)}}
            <ul class="nav nav-tabs">
                {{#if (hasResultNumber 1)}}
                    <li class="nav-item active"> <a class="nav-link active"  href="#narrative-tab-1" data-toggle="tab"><div class="nav-tab-inner itineraryTab1"></div></a> </li>
                {{/if}}
                {{#if (hasResultNumber 2) }}
                    <li class="nav-item"> <a class="nav-link" href="#narrative-tab-2" data-toggle="tab"><div class="nav-tab-inner itineraryTab2"></div></a> </li>
                {{/if}}
                {{#if (hasResultNumber 3) }}
                    <li class="nav-item"> <a class="nav-link"href="#narrative-tab-3" data-toggle="tab"><div class="nav-tab-inner itineraryTab3"></div></a> </li>
                {{/if}}
            </ul>
        {{/if}}
    </div>

    <div class="tab-content">
        <div class="tab-pane active" id="narrative-tab-1"> <div class="itinerary1"></div> </div>
        <div class="tab-pane" id="narrative-tab-2"> <div class="itinerary2"></div> </div>
        <div class="tab-pane" id="narrative-tab-3"> <div class="itinerary3"></div> </div>
    </div>
</div>


<script>
    $(".localize").localize();
</script>
